int Solution::trap(const vector<int>&A) {
int n=A.size();
vector<int> l(n,0);
vector<int> r(n,0);
int res=0;
for(int i=1; i<n-1; i++){
    l[i]=(A[i-1]-A[i]+l[i-1])>0 ?(A[i-1]-A[i]+l[i-1]) :0;
}

for(int i=n-2; i>0; i--){
    r[i]=(A[i+1]-A[i]+r[i+1])>0 ?(A[i+1]-A[i]+r[i+1]) :0;
}

for(int i=1; i<n; i++){
    res+=min(l[i],r[i]);
}
return res;
}
